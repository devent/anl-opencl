<configuration scan="false">

    <!-- For multiple instanced -->
    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>[%level] %date{HH:mm:ss.SSS} [%thread] %logger{0} - %msg%n%rEx</pattern>
        </encoder>
        <immediateFlush>false</immediateFlush>
    </appender>

    <appender name="FILE_DAILY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>\${java.io.tmpdir}/${project.custom.app.path}-\${bySecond}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>\${java.io.tmpdir}/${project.custom.app.path}-\${bySecond}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>1MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%level] %date{ISO8601} [%thread] %logger - %msg %n%rEx</pattern>
        </encoder>
        <immediateFlush>false</immediateFlush>
    </appender>

    <root level="ERROR">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE_DAILY" />
    </root>

    <logger name="com.anrisoftware" level="ERROR" />
    <logger name="com.anrisoftware.resources" level="ERROR" />

</configuration>
