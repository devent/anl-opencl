<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>globalpom-izpack</artifactId>
    <groupId>com.anrisoftware.globalpom</groupId>
    <version>4.6.0-SNAPSHOT</version>
    <relativePath>pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>anlopencl-jme3-izpack</artifactId>
  <name>ANL-OpenCL :: IzPack Installation</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>Package the ANL-OpenCL JMonkeyEngine3 application in IzPack installer.</description>
  <issueManagement>
    <system>Redmine</system>
    <url>https://project.anrisoftware.com/projects/anl-opencl</url>
  </issueManagement>
  <inceptionYear>2021</inceptionYear>
  <scm>
    <connection>scm:git:git@anrisoftware.com:dwarf-hustle/anl-opencl.git</connection>
    <developerConnection>scm:git:git@anrisoftware.com:dwarf-hustle/anl-opencl.git</developerConnection>
    <url>https://project.anrisoftware.com/projects/anl-opencl/repository</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <id>shade-my-jar</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                  <includes>
                    <include>**</include>
                  </includes>
                </filter>
              </filters>
              <artifactSet>
                <includes>
                  <include>*:*</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer>
                  <resource>reference.conf</resource>
                </transformer>
                <transformer>
                  <resource>version.conf</resource>
                </transformer>
                <transformer>
                  <manifestEntries>
                    <Main-Class>${project.custom.app.mainclass}</Main-Class>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <site>
      <id>anrisoftware</id>
      <url>dav:https://anrisoftware.com/javadoc/${project.groupId}/${project.artifactId}</url>
    </site>
  </distributionManagement>
  <properties>
    <project.custom.app.path>anl-opencl-0.0.2</project.custom.app.path>
    <project.custom.launch4j.applauncher.jarfilename>anl-opencl-0.0.2</project.custom.launch4j.applauncher.jarfilename>
    <project.custom.app.organization.url>https://anl-opencl.anrisoftware.com</project.custom.app.organization.url>
    <project.custom.app.author.email>erwin@muellerpublic.de</project.custom.app.author.email>
    <project.custom.app.description>ANL-OpenCL</project.custom.app.description>
    <license.custom.license.template>src/main/resources/LICENSE.temp</license.custom.license.template>
    <project.custom.app.version>0.0.2</project.custom.app.version>
    <project.custom.launch4j.install.originalfilename>anl-opencl-0.0.2.exe</project.custom.launch4j.install.originalfilename>
    <project.custom.launch4j.install.internalname>anl-opencl-0.0.2.jar</project.custom.launch4j.install.internalname>
    <project.custom.app.mainclass>com.anrisoftware.anlopencl.jmeapp.states.GameApplication</project.custom.app.mainclass>
    <project.custom.app.name>ANL-OpenCL</project.custom.app.name>
    <project.custom.launch4j.applauncher.launcherfilename>anl-opencl-0.0.2</project.custom.launch4j.applauncher.launcherfilename>
    <project.custom.app.author.name>Erwin MÃ¼ller</project.custom.app.author.name>
  </properties>
</project>
